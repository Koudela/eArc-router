{
    "name": "earc/router",
    "description": "eArc - the explicit architecture framework - router component",
    "type": "library",
    "license": "MIT",
    "version": "4.0",
    "authors": [
        {
            "name": "Thomas Koudela",
            "email": "thomas@koudela.net"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable" : true,
    "require": {
        "php": "^8.0",
        "earc/event-tree": "^2.0",
        "earc/parameter-transformer": "^0.0"
    },
    "autoload": {
        "psr-4": {
